@page "/"
@using Songdle.Application.DTOs
@using Songdle.Application.Interfaces
@inject ISongProcessingService SongProcessingService

@rendermode InteractiveServer
<PageTitle>Songdle</PageTitle>

<div class="container mt-5">
    <h2 class="text-center mb-4">🎵 Songdle</h2>

    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Zgadnij tytuł piosenki..." @bind="guess" />
        <button class="btn btn-success" type="submit" @onclick="SubmitGuess">Zgaduję</button>
    </div>

    @if (isLoading)
    {
        <div class="alert alert-info">Ładowanie...</div>
    }

    @if (guessResults.Any())
    {
        <h4 class="mt-4">Twoje próby:</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tytuł</th>
                    <th>Artysta</th>
                    <th>Album</th>
                    <th>Rok</th>
                    <th>Kraj</th>
                    <th>Gatunek</th>
                    <th>Fragment tekstu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in guessResults)
                {
                    <tr>
                        <td>@result.Title</td>
                        <td>@result.Artist</td>
                        <td>@result.Album</td>
                        <td>@result.ReleaseDate.Year</td>
                        <td>@result.Country</td>
                        <td>@result.Genre</td>
                        <td>@result.LyricsFragment</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (isCorrect)
    {
        <div class="alert alert-success mt-3">
            🎉 Gratulacje! Odgadłeś piosenkę!
        </div>
    }

</div>

@code {
    private string guess = "";
    private bool isCorrect = false;
    private bool isLoading = false;
    private List<SongDto> guessResults = new();

    private async Task SubmitGuess()
    {
        if (string.IsNullOrWhiteSpace(guess))
            return;

        isLoading = true;

        try
        {
            // TODO: zamień na realne pobieranie i porównywanie piosenki
            SongDto song = null; //await SongProcessingService.GetSongByTitleAsync(guess);

            if (song is not null)
            {
                guessResults.Add(song);
                isCorrect = true;
            }
            else
            {
                // placeholder
                var dummy = new SongDto
                {
                    Title = guess,
                    Artist = "???",
                    Album = "???",
                    Country = "???",
                    Genre = "???",
                    ReleaseDate = new DateTime(2020, 1, 1),
                    LyricsFragment = "???"
                };
                guessResults.Add(dummy);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            guess = "";
        }
    }
}
